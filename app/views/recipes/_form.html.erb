<%= form_for(@recipe) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br />
    <%= f.fields_for :ingredients do |ingredient_builder| %>
        <%= ingredient_builder.label "Ingredient: " %>
        <%= ingredient_builder.text_field :name %>
        <br>
        <%= ingredient_builder.label "Quantity: " %>
        <%= ingredient_builder.text_field :quantity %>
        <br>
    <% end%>

    <br />
    <%= f.submit %>
<% end %>