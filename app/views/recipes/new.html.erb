<h1>Create A New Recipe</h1>
<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br />

    <%= f.fields_for :ingredients do |i| %>
        <%= i.label :ingredient_name %>
        <%= i.text_field :name %>
        <br />
        <%= i.label :ingredient_quantity %>
        <%= i.text_field :quantity %>
        <br />

    <% end %>

    <%= f.submit %> 
<% end %>
