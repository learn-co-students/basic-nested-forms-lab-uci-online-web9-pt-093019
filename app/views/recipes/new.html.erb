<h1>Make a New Recipe!</h1>

<%= form_for @recipe do |f| %>
    <p>
    <%= f.label :title %>
    <%= f.text_field :title %></p>

    <%= f.fields_for :ingredients do |ing| %>
        <p><%= ing.label :name %>
        <%= ing.text_field :name %></p>

        <p><%= ing.label :quantity %>
        <%= ing.text_field :quantity %></p>
    <% end %>
    <%= f.submit %>
<% end %>
